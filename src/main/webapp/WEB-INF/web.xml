<?xml version="1.0" encoding="iso-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-app_3_0.xsd"
version="3.0">
  <display-name>bridgescore</display-name>

  <!-- Spring Configuration Class for Beans -->
  <context-param>
    <param-name>contextClass</param-name>
    <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  </context-param>

  <!-- Configuration locations must consist of one or more comma- or space-delimited
        fully-qualified @Configuration classes. Fully-qualified packages may also be
        specified for component-scanning -->

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>pliesveld.bridge.spring.SpringConfig</param-value>
  </context-param>

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <!-- Open Hibernate Session once per request cycle -->
  <filter>
    <filter-name>hibernateFilter</filter-name>
    <filter-class>
    org.springframework.orm.hibernate5.support.OpenSessionInViewFilter</filter-class>
    <init-param>
      <param-name>sessionFactoryBeanName</param-name>
      <param-value>sessionFactory</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  

<!--
                There are three means to configure Wickets configuration mode and they 
                are tested in the order given.
                
                1) A system property: -Dwicket.configuration 
                2) servlet specific <init-param> 
                3) context specific <context-param>

                The value might be either "development" (reloading when templates change) or 
		"deployment". If no configuration is found, "development" is the default. 
-->

  <filter>
    <filter-name>wicket.bridgescore</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
        <param-name>applicationFactoryClassName</param-name>
        <param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>wicket.bridgescore</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
